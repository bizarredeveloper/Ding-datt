<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="fill_parent" >

        <com.bizarre.dingdatt.adapter.RoundedImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contest_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/duration_colon"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:gravity="center|left" />
            
            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text=""
                android:textSize="8dp"
                android:textColor="#63BAD6"
                android:gravity="center|left" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/to_colon"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:gravity="center|left" />
            
            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text=""
                android:textSize="8dp"
                android:textColor="#63BAD6"
                android:gravity="center|left" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/prize_colon"
                android:textSize="8dp"
                android:textColor="#ffffff"
                android:gravity="center|left" />
            
            <TextView
                android:id="@+id/prize"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="8dp"
                android:textColor="#63BAD6"
                android:gravity="center|left" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
        
        <ImageView 
            android:id="@+id/ding"
            android:layout_height="30dp"
            android:src="@drawable/bell_symbol"
            android:layout_width="30dp"/>
        
        <ImageView 
            android:layout_height="wrap_content"
            android:src="@drawable/menu_left_arrow"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>